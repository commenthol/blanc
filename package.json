{
  "name": "blanc",
  "version": "0.2.0",
  "description": "node module boilerplate",
  "main": "index.js",
  "engines": {
    "node": ">=0.8.0"
  },
  "directories": {
    "doc": "doc",
    "test": "test"
  },
  "dependencies": {},
  "devDependencies": {
    "istanbul": "latest",
    "jsdox": "latest",
    "mocha": "latest",
    "standard": "latest"
  },
  "scripts": {
    "test": "standard && mocha test/*.mocha.js",
    "cover": "istanbul cover _mocha --report lcov --report text -- -R dot --check-leaks test/*.mocha.js",
    "doc": "jsdox -o doc index.js lib/*.js",
    "lint": "standard",
    "readme": "markedpp --githubid -i README.md -o README.md",
    "clean": "rm -rf doc coverage"
  },
  "standard": {
    "ignore": [
      "/coverage/*",
      "/tmp/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/commenthol/blanc.git"
  },
  "keywords": [
    "module",
    "boilerplate"
  ],
  "author": "commenthol <commenthol@gmail.com>",
  "maintainers": "commenthol <commenthol@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/commenthol/blanc/issues"
  },
  "homepage": "https://github.com/commenthol/blanc"
}